# MODFS_MODSCRIPT
# SUPPORTS precheck postcheck install language(en,de)
# NAME set fixed branding
# DESCRIPTION en
# set a fixed branding from 'rc.conf', ignore any box-specific value
# DESCRIPTION de
# Branding fest einstellen in der 'rc.conf', die Einstellung aus dem Bootloader wird ignoriert
# EOH
#
# process parameters
#
language=$1
rootdir=$2
mode=$3
step=$4
[ ${#4} -eq 0 ] && exit 59 # invalid call
#
# get 'avm' or 'avme' branding as preference, if one of them is supported
#
get_branding_value()
{
	for brand in $TARGET_BRANDINGS; do
		[ "$brand" = "avm" ] && printf "%s" "$brand" && return
		[ "$brand" = "avme" ] && printf "%s" "$brand" && return
	done
	set -- $TARGET_BRANDINGS
	printf "%s" "$1"
	return
}
#
# execute the requested step
#
rc=0
modfile="$rootdir/etc/init.d/rc.conf"
lookfor="^export OEM\$"
MOD_FIXED_BRANDING_VALUE="${MOD_FIXED_BRANDING_VALUE:-$(get_branding_value)}"
changeto="export OEM=$MOD_FIXED_BRANDING_VALUE"
#
# run action
#
case $step in
	precheck)
		if grep -q "$lookfor" "$modfile" 2>/dev/null; then
			rc=0
		else
			if grep -q "^$changeto\$" "$modfile" 2>/dev/null; then
				case "$language" in
					de)
						printf "Die Modifikation wurde bereit angewendet.\n" 1>&2
						;;
					*)
						printf "The modification was applied already.\n" 1>&2
						;;
				esac
			else
				case "$language" in
					de)
						printf "Die Modifikation ist fÃ¼r diese Version nicht anwendbar.\n" 1>&2
						;;
					*)
						printf "The modification is not applicable for this version.\n" 1>&2
						;;
				esac
			fi
			rc=1
		fi
		;;

	postcheck)
		if grep -q "^$changeto\$" "$modfile" 2>/dev/null; then
			rc=0
		else
			case "$language" in
				de)
					printf "Die Modifikation war nicht erfolgreich.\n" 1>&2
					;;
				*)
					printf "The modification was NOT applied successfully.\n" 1>&2
					;;
			esac
			rc=1
		fi
		;;

	install)
		sed -e "s|$lookfor|$changeto|" -i "$modfile"
		rc=0
		;;
	*)
		rc=59
		;;
esac
exit $rc
