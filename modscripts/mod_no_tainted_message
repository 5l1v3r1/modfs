# MODFS_MODSCRIPT
# SUPPORTS precheck postcheck install language(en,de)
# NAME remove tainted message from GUI
# DESCRIPTION en
# do not display the tainted message on overview page, does not really reset the flag
# DESCRIPTION de
# Nachricht 'Vom Hersteller nicht unterstützte Änderungen' ausblenden, das Flag wird aber davon nicht zurückgesetzt 
# EOH
#
# process parameters
#
language=$1
rootdir=$2
mode=$3
step=$4
[ ${#4} -eq 0 ] && exit 59 # invalid call
#
# execute the requested step
#
rc=0
modfile="$rootdir/usr/lua/retrieve_data.lua"
lookfor="^d.FirmwareSigned = box.query(\"box:status/signed_firmware\")==\"1\"\$"
changeto="d.FirmwareSigned = true"
#
# run action
#
case $step in
	precheck)
		if grep -q "$lookfor" "$modfile" 2>/dev/null; then
			rc=0
		else
			if grep -q "^$changeto\$" "$modfile" 2>/dev/null; then
				case "$language" in
					de)
						printf "Die Modifikation wurde bereit angewendet.\n" 1>&2
						;;
					*)
						printf "The modification was applied already.\n" 1>&2
						;;
				esac
			else
				case "$language" in
					de)
						printf "Die Modifikation ist für diese Version nicht anwendbar.\n" 1>&2
						;;
					*)
						printf "The modification is not applicable for this version.\n" 1>&2
						;;
				esac
			fi
			rc=1
		fi
		;;

	postcheck)
		if grep -q "^$changeto\$" "$modfile" 2>/dev/null; then
			rc=0
		else
			case "$language" in
				de)
					printf "Die Modifikation war nicht erfolgreich.\n" 1>&2
					;;
				*)
					printf "The modification was NOT applied successfully.\n" 1>&2
					;;
			esac
			rc=1
		fi
		;;

	install)
		sed -e "s|$lookfor|$changeto|" -i "$modfile"
		rc=0
		;;
	*)
		rc=59
		;;
esac
exit $rc
