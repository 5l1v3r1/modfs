# MODFS_MODSCRIPT
# SUPPORTS precheck postcheck install language(en,de)
# NAME always start telnet daemon
# DESCRIPTION en
# start the telnet daemon at boot time, regardless of any other setting
# DESCRIPTION de
# Telnet-Daemon automatisch beim Systemstart aktivieren, egal was an anderen Stellen eingestellt wurde
# EOH
#
# process parameters
#
language=$1
rootdir=$2
mode=$3
step=$4
[ ${#4} -eq 0 ] && exit 59 # invalid call
#
# execute the requested step
#
rc=0
target="etc/init.d/S85-apps"
case $step in
	precheck)
		grep -q telnetd $target 2>/dev/null
		rc=$?
		if [ $rc -eq 0 ]; then
			case "$language" in
				de)
					echo "Die Modifikation wurde bereits angewendet oder ist nicht erforderlich." 1>&2
					;;
				*)
					echo "The startup file is modified already or modification isn't necessary." 1>&2
					;;
			esac
			rc=1
		else
			rc=0
		fi
		;;
	postcheck)
		grep -q telnetd $target 2>/dev/null
		rc=$?
		if [ $rc -eq 1 ]; then
			case "$language" in
				de)
					echo "Die Modifikation war nicht erfolgreich." 1>&2
					;;
				*)
					echo "The startup file seems to be unmodified." 1>&2
					;;
			esac
			rc=1
		else
			rc=0
		fi
		;;
	install)
		echo "/usr/sbin/telnetd -l /sbin/ar7login" >>$rootdir/$target
		rc=0
		;;
	*)
		rc=59
		;;
esac
exit $rc
